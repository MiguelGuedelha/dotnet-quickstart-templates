{
    "$schema": "http://json.schemastore.org/template",
    "author": "Miguel Guedelha",
    "classifications": [
        "Web",
        "Minimal Api",
        "Clean Architecture"
    ],
    "identity": "CleanArchMinimalApi",
    "name": "Minimal Api with Clean Architecture Solution",
    "shortName": "clean-arch-min-api",
    "sourceName": "CleanArchMinimalApi",
    "tags": {
        "type": "solution",
        "language": "C#"
    },
    "preferNameDirectory": true,
    "symbols": {
        "Framework": {
            "type": "parameter",
            "description": "Target framework for the solution",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "net6.0"
                },
                {
                    "choice": "net7.0"
                }
            ],
            "defaultValue": "net7.0",
            "replaces": "{TargetFramework}"
        }
    }
}